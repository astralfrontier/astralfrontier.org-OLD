%article
  - if @page.metadata("Icon")
    %img{src: @page.metadata("Icon"), align: "left"}
  ~ @page.to_html(self)
  = haml :page_meta, layout: false, locals: { page: @page }
  %section.pages
    - unless @page.flagged_as?("no-pages")
      = article_summaries(@page.pages)
  - unless @page.articles.empty? or @page.flagged_as?("no-articles")
    %section.articles
      %header
        %h1= articles_heading
      = article_summaries(@page.articles)
