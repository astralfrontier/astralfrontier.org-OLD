doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title
      block title
        = title || "Astral Frontier"

    link(href="/assets/css/astralfrontier.css" rel="stylesheet")
    link(href="/assets/bower/fontawesome/css/font-awesome.min.css" rel="stylesheet")

    link(rel="alternate" type="application/rss+xml" title="RSS Feed" href="/rss.xml")
    link(rel="icon" type="image/x-icon" href="/assets/favicon.ico")
  body
    block contents
      != contents

    div.container
      div.col-md-12
        include ./disqus.jade
    script(src="/assets/bower/jquery/dist/jquery.min.js")
    script(src="/assets/bower/bootstrap/dist/js/bootstrap.min.js")
    script(src="/assets/js/masonry.pkgd.min.js")
    include ./google-analytics.jade
