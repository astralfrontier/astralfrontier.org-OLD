div.site-nav-masthead
  div.container
    nav.site-nav
      for item in nav
        if new RegExp(item.regex).test(path)
          a.site-nav-item.active(href=item.path)= item.label
        else
          a.site-nav-item(href=item.path)= item.label
      a.site-nav-item.pull-right(href="/rss.xml")
        i.fa.fa-rss
      div.dropdown.pull-right
        a.dropdown-toggle.site-nav-item#socialmedia(data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" href="#")
          i.fa.fa-share-alt
        ul.dropdown-menu(aria-labelledby="socialmedia")
          for site in social_media
            li
              a(href=site.url)
                i.fa(class="fa-#{site.icon}")
                | &nbsp;
                = site.name
