extends ./basic.jade

block contents
  include ./nav.jade
  div.container
    div.row
      for column in yaml_contents.columns
        div.col-md-4
          if column.image
            img.img-responsive.center-block(src=column.image style="max-height: 100px;")
          else
            h2= column.name
          for entry in column.entries
            if entry.url
              a(href=entry.url)
                h3= entry.name
            else
              h3= entry.name
            if entry.desc
              p!= entry.desc
            if entry.bullets
              ul
                for bullet in entry.bullets
                  li
                    a(href=bullet.url)= bullet.name
                    if bullet.desc
                      br/
                      small!= bullet.desc
